<?xml version="1.0" encoding="utf-8" ?>


<ContentPage
    x:Class="PenasLab3.Page.LandingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Black">

    <ContentPage.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem
                Clicked="ExitClicked"
                Command="{Binding ExitCommand}"
                Text="Exit" />
        </MenuBarItem>
        <MenuBarItem Text="Shapes">


            <MenuFlyoutItem
                Clicked="TringleClicked"
                Command="{Binding TriangleBinding}"
                Text="Triangle" />
            <MenuFlyoutItem
                Clicked="SquareClicked"
                Command="{Binding SquareBinding}"
                Text="Square" />
            <MenuFlyoutItem
                Clicked="RectangleClicked"
                Command="{Binding RectangleBinding}"
                Text="Rectangle" />
            <MenuFlyoutItem
                Clicked="CircleCLicked"
                Command="{Binding CircleBinding}"
                Text="Circle" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>

</ContentPage>